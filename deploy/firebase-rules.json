{
  "rules": {
    "chats": {
      "$user_id": {
        ".read": "auth != null && (root.child('admins').child(auth.uid).exists() || $user_id === auth.uid.replace('.', '_'))",
        ".write": "auth != null && (root.child('admins').child(auth.uid).exists() || $user_id === auth.uid.replace('.', '_'))"
      }
    },
    "admins": {
      ".read": "auth != null",
      ".write": false
    }
  }
} 